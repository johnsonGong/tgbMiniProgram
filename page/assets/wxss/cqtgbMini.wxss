/* 重置样式 */

.weui-cells:after {
  border-bottom: none;
}

/* *** *** *** *** *** */

.page-header {
  position: relative;
  /* background-color: pink; */
}

.tgb-icon {
  position: relative;
  width: 130px;
  height: 50rpx;
}

.tgb-logo {
  position: absolute;
  top: 20rpx;
  left: 40rpx;
}

.page-footer {
  text-align: center;
  /* background-color: skyblue; */
}

/* 全局样式 */

.tgb-box {
  margin: 15px;
  padding: 5px;
  /* background-color: yellow; */
}

.tgb-box-todo {
  margin: 120rpx;
  padding: 40rpx;
  background-color: yellow;
}

.g-note-info {
  color: #b3b3b3;
}

.g-agree-title {
  color: #488fd6;
}

.g-form-line::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #d9d9d9;
  color: #d9d9d9;
  left: 15px;
}

/* 背景图片 */

.g-bg-img {
  position: relative;
  width: 100%;
  height: 100%;
}

/* 位置 */

.g-mg-top-15 {
  margin-top: 15px;
}

.g-mg-btm-15 {
  margin-bottom: 15px;
}

.g-fl {
  float: left;
}

.g-fr {
  float: right;
}

.clearfix::after {
  clear: both;
  content: ' ';
  display: block;
}

.g-border {
  border: 1rpx solid #abd4f4;
  border-radius: 5px;
}

.g-txt-rt {
  text-align: right;
}

.g-overflow {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.comm-txt-line {
  position: relative;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

/* 自定义表单 */

.tgb-form {
  position: relative;
  /* background-color: pink; */
  padding: 10rpx;
}

.tgb-form .tgb-cell {
  position: relative;
  /* background-color: yellow; */
  /* margin-bottom: 20rpx; */
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
  box-sizing: border-box;
}

.tgb-form .tgb-cell::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #e5e5e5;
  /* border-bottom: 1px solid red; */
  color: #e5e5e5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  /* left: 15px; */
  z-index: 2;
  clear: both;
}

.tgb-form .tgb-cell .tgb-cell-hd {
  position: relative;
  width: 30%;
  float: left;
  padding-left: 20rpx;
  /* background-color: pink; */
  box-sizing: border-box;
  color: #999999;
}

.tgb-form .tgb-cell .tgb-cell-bd {
  position: relative;
  float: left;
  width: 70%;
  height: 100%;
  color: #666666;
  /* background-color: skyblue; */
  box-sizing: border-box;
}

.tgb-form .tgb-cell .tgb-input {
  position: relative;
  top: 10%;
  line-height: 80rpx;
  height: 80%;
  /* background-color: yellow; */
}
