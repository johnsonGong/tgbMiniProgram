/* page/common/identifyFace/identifyFace.wxss */

.face-title {
  position: relative;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
  text-align: center;
  /* background-color: pink; */
}

.scan-face-line {
  position: relative;
  height: 430rpx;
  box-sizing: border-box;
}

.scan-face-wrap {
  position: relative;
  top: 10rpx;
  width: 300rpx;
  height: 346rpx;
  margin: 0 auto;
  /* background-color: lightpink; */
  overflow: hidden;
  box-sizing: border-box;
}

.scan-corner {
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  box-sizing: border-box;
}

.corner-lt {
  left: 0;
  top: 0;
  border-top: 5rpx solid #2d97fa;
  border-left: 5rpx solid #2d97fa;
}

.corner-lb {
  left: 0;
  bottom: 0;
  border-bottom: 5rpx solid #2d97fa;
  border-left: 5rpx solid #2d97fa;
}

.corner-rt {
  right: 0;
  top: 0;
  border-top: 5rpx solid #2d97fa;
  border-right: 5rpx solid #2d97fa;
}

.corner-rb {
  right: 0;
  bottom: 0;
  border-bottom: 5rpx solid #2d97fa;
  border-right: 5rpx solid #2d97fa;
}

.scan-face {
  position: absolute;
  left: 14rpx;
  top: 14rpx;
  width: 276rpx;
  height: 322rpx; 
  /* left: 36rpx;
  top: 36rpx;
  width: 228rpx;
  height: 274rpx; */
  box-sizing: border-box;
}

.scan-tips {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #666666;
  font-size: 26rpx;
}