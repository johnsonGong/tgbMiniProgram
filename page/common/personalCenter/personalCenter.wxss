.page-personal {
  position: absolute;
  background-color: #f5f5f5;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.info-line {
  position: relative;
  background-color: #fff;
  margin-top: 20rpx;
  padding: 35rpx 40rpx;
  box-sizing: border-box;
}

.user-icon {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  background-color: pink;
  border-radius: 100rpx;
}

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 100rpx;
}

.user-name-tel {
  position: relative;
  width: 230rpx;
  height: 100rpx;
  margin-top: 30rpx;
  margin-left: 25rpx;
}

.user-qrcode {
  position: relative;
  top: 50rpx;
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.qrcode-icon {
  width: 50rpx;
  height: 50rpx;
}

.arrow-right {
  position: absolute;
  right: 0;
  top: 25rpx;
}

.sanxia-shell {
  height: 100rpx;
  line-height: 30rpx;
}

.shell-count {
  font-size: 40rpx;
}

.btn-reward {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 40rpx;
}

.friend-title {
  position: relative;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 40rpx;
}

.friend-arrow-rt {
  position: absolute;
  right: 0;
  top: 25rpx;
}

.friend-list {
  position: relative;
  min-height: 80rpx;
  background-color: #f5f9fc;
  padding: 10rpx 30rpx;
}

.friend-item {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #e7e8e9;
  box-sizing: border-box;
}

.friend-item:last-child {
  border-bottom: 1px solid transparent;
}

.friend-icon {
  position: relative;
  top: 10rpx;
  width: 60rpx;
  height: 60rpx;
  background-color: pink;
  border-radius: 50rpx;
}

.friend-name {
  position: relative;
  margin-left: 20rpx;
  width: 200rpx;
}
.friend-desc {
  position: relative;
  float: right;
}

.person-ad {
  position: relative;
  margin-top: 20rpx;
  height: 240rpx;
  background-color: pink;
}

.ad-img {
  position: relative;
  width: 100%;
  height: 100%;
}
