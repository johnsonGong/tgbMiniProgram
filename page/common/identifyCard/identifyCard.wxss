/* page/common/identifyCard/identifyCard.wxss */

.card-title {
  position: relative;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
  text-align: center;
  /* background-color: pink; */
}

.photo-line {
  position: relative;
  margin: 0;
  /* background-color: skyblue; */
}

.card-item {
  position: relative;
  width: 300rpx;
  height: 250rpx;
  /* background-color: yellow; */
  box-sizing: border-box;
  border: 8rpx dashed #f2f2f2;
  border-radius: 5px;
}

.card-zm {
  position: relative;
  left: 20rpx;
  float: left;
}

.card-fm {
  position: relative;
  right: 20rpx;
  float: right;
  /* background-color: pink; */
}

.card-bg-icon {
  position: relative;
  left: 10%;
  top: 10%;
  width: 80%;
  height: 80%;
  /* margin: 0 auto; */
}

.camera-icon {
  position: absolute;
  width: 46rpx;
  height: 38rpx;
  left: 40%;
  top: 50%;
  transform: translateX(-50%);
  transform: translateY(-50%);
}

.card-desc {
  position: absolute;
  bottom: -60rpx;
  width: 100%;
  font-size: 26rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
}

.card-info {
  position: relative;
  margin-top: 50rpx;
}