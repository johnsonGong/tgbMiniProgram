.top-bg {
  position: relative;
  width: 100%;
  height: 250rpx;
  background-color: lightcyan;
  overflow: hidden;
}

.bg-img {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
}

.result-desc {
  position: absolute;
  margin-top: 60rpx;
  /* font-size: 40rpx; */
  color: #fdfdfb;
  width: 100%;
  text-align: center;
  /* background-color: pink; */
}

.result-amount {
  font-size: 60rpx;
}

.result-amount::after {
  content: "å…ƒ";
  color: #fdfdfb;
  font-size: 32rpx;
}

.result-msg {
  position: relative;
  text-align: left;
  color: #8a8a8a;
}

.download-code-line {
  position: relative;
  width: 500rpx;
  height: 300rpx;
  margin: 0 auto;
  box-sizing: border-box;
}

.app-item {
  position: relative;
  float: left;
  width: 200rpx;
  height: 100%;
  box-sizing: border-box;
}

.download-icon:last-child {
  margin-right: 0;
}

.download-icon {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 200rpx;
  background-color: #e4e4e4;
}

.download-desc {
  position: absolute;
  left: 0;
  top: 220rpx;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  text-align: center;
}

.mid-line {
  position: relative;
  width: 100%;
  height: 1rpx;
  background-color: #ececec;
}

.redpack-btn {
  position: relative;
  width: 275rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 50rpx;
  margin: 100rpx auto;
  background-color: #fa5d2d;
  text-align: left;
  color: #fff;
  box-sizing: border-box;
  border-radius: 50rpx;
}

.countdown {
  position: absolute;
  right: 5px;
  top: 5rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fa5d2d;
  background-color: #fedfd5;
  border-radius: 50rpx;
  text-align: center;
}

.foot-logo {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 130rpx;
  text-align: center;
  background-color: #f5f5f5;
}

.tgb-logo {
  position: relative;
  width: 270rpx;
  height: 50rpx;
  display: block;
  margin: 40rpx auto 0;
}
