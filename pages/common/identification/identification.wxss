/* 覆盖weui部分样式 */
.weui-media-box:before{
  border-top:none;
}

.upload-line {
  margin-bottom: 5px;
}

.upload-line .upload-card {
  position: relative;
  height: 100px;
  /* background-color: pink; */
  margin-right: 10px;
  box-sizing: border-box;
  border: 1px solid #000000;
}

.upload-line .upload-card:last-child {
  margin-right: 0;
}
.card-icon {
  position: relative;
  width: 100%;
  height: 80px;
}

.upload-desc {
  position: absolute;
  width: 100%;
  bottom: 0px;
  text-align: center;
  display: block;
  /* background-color: skyblue; */
}

.card-info {
  position: relative;
  height: 30px;
  line-height: 30px;
  border-bottom: 1px solid #e2e2e2;
  margin-bottom: 5px;
}

.card-info .card-txt {
  position: relative;
  float: left;
  width: 70%;
  height: 100%;
  display: block;
}

.card-info .upd-btn {
  position: relative;
  float: right;
}

.face-info-box {
  position: relative;
  width: 180px;
  height: 200px;
  border: 1px solid #000000;
  margin: 0 auto;
}

.face-info-box .face-tips {
  position: absolute;
  top: 80px;
  height: 40px;
  width: 100%;
  /* background-color:pink; */
  text-align: center;
}

.face-info-box .camera-btn {
  position: relative;
  top: 130px;
  width: 80%;
  margin: 0 auto;
  box-sizing: border-box;
}